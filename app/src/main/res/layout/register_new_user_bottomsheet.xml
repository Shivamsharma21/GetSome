<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
 <LinearLayout
     android:background="@drawable/round_dailog"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:textSize="30sp"
         android:fontFamily="@font/vampiro_one"
         android:text="Register With Mail"
         android:layout_gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

     </TextView>
        <EditText
            android:gravity="center"
            android:hint="email"
            android:textColorHint="#D3D3D3"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_round__rectangle"
            android:layout_gravity="center"
            android:id="@+id/newEmail"
            android:textSize="25sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

        </EditText>
        <EditText
            android:textAlignment="center"
            android:hint="password"
            android:textColorHint="#D3D3D3"
            android:layout_marginTop="20dp"
            android:background="@drawable/circular_round__rectangle"
            android:layout_gravity="center"
            android:id="@+id/newPassword"
            android:textSize="25sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

        </EditText>
        <de.timonknispel.ktloadingbutton.KTLoadingButton
           android:layout_marginTop="10dp"
           android:layout_gravity="center"
            android:id="@+id/register_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:buttonName="Register">

        </de.timonknispel.ktloadingbutton.KTLoadingButton>

    </LinearLayout>
</layout>